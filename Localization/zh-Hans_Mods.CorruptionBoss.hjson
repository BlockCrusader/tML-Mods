Configs: {
	Config: {
		DisplayName: 配置

		Headers: {
			HeaderWeapons: 武器设定
			HeaderBoss: Boss设定
		}

		bossHealthMultiplier: {
			Label: 核心生命倍率
			Tooltip:
				'''
				腐化核心与猩红核心血量的倍率
				也会影响卫核的血量，不影响影灵
				如果觉得核心战太难或太简单，可以调整该项.
				''' 
		}

		wispHealthMultiplier: {
			Label: 影灵生命倍率
			Tooltip:
				'''
				核心召唤的影灵血量的倍率
				如果觉得核心战太难或太简单，可以调整该项.
				''' 
		}

		bossDefenseMultiplier: {
			Label: 核心防御倍率
			Tooltip:
				'''
				腐化核心与猩红核心防御的倍率
				也会影响卫核和影灵
				如果觉得核心战太难或太简单，可以调整该项.
				''' 
		}

		bossDamageMultiplier: {
			Label: 核心伤害倍率
			Tooltip:
				'''
				腐化核心与猩红核心伤害的倍率
				也会影响卫核和影灵,以及所有相关射弹
				如果觉得核心战太难或太简单，可以调整该项.
				''' 
		}

		attackVelocityMultiplier: {
			Label: 核心弹速倍率
			Tooltip:
				'''
				腐化核心与猩红核心发射的射弹速度的倍率
				也会影响卫核发射的射弹和影灵的移速
				还能改变影灵和暗夜炸弹的转向速度
				如果觉得核心战太难或太简单，可以调整该项.
				''' 
		}

		bossSpeedMultiplier: {
			Label: 核心速度倍率
			Tooltip:
				'''
				腐化核心与猩红核心速度的倍率
				同时调整核心的惯性，这决定了核心转弯的速度和幅度
				如果觉得核心战太难或太简单，可以调整该项.
				''' 
		}

		rangedWepDmgMultiplier: {
			Label: 远程武器伤害倍率
			Tooltip:
				'''
				诅咒卡宾枪和猩红铁炮伤害的倍率
				对其他武器无效
				猩红铁炮的生命吸取不与伤害成正比增加
				用于手动平衡武器的强度（可与BOSS倍率配合调整BOSS时期）
				''' 
		}

		meleeWepDmgMultiplier: {
			Label: 近战武器伤害倍率
			Tooltip:
				'''
				惩戒之核与血腥偃月刀伤害的倍率
				对其他武器无效
				用于手动平衡武器的强度（可与BOSS倍率配合调整BOSS时期）
				''' 
		}

		magicWepDmgMultiplier: {
			Label: 魔法武器伤害倍率
			Tooltip:
				'''
				亵渎之刺与嗜血伤害的倍率
				对其他武器无效
				嗜血的生命回复效果不会改变
				用于手动平衡武器的强度（可与BOSS倍率配合调整BOSS时期）
				''' 
		}

		summonWepDmgMultiplier: {
			Label: 召唤武器伤害倍率
			Tooltip:
				'''
				卫核法杖与血污轨迹伤害的倍率
				对其他武器无效
				血污轨迹的标记暴击不受影响
				卫核法杖的仆从需要重新召唤更新其伤害
				用于手动平衡武器的强度（可与BOSS倍率配合调整BOSS时期）
				召唤武器往往随着伤害的增加而指数级增强，因此建议将倍率设置得低于其他武器
				''' 
		}
	}
}

